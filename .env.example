# Application
APP_ENV=development
PORT=3000

# Database - PostgreSQL
# Option 1: Use DATABASE_URL for full connection string (recommended for production/Heroku/Railway)
DATABASE_URL=postgresql://user:password@localhost:5432/ubible?sslmode=disable

# Option 2: Use individual parameters (used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=ubible
DB_SSLMODE=disable

# CRITICAL: Generate with: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_GENERATED_SECRET

# Admin Account (CHANGE THESE!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_PASSWORD
ADMIN_EMAIL=admin@example.com

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000

# Rate Limiting (requests per minute)
RATE_LIMIT_GENERAL=100
RATE_LIMIT_AUTH=10
RATE_LIMIT_ADMIN=50

# Guest Cleanup
GUEST_CLEANUP_ENABLED=true
GUEST_CLEANUP_INTERVAL=24h
GUEST_INACTIVE_DAYS=7

# WebSocket
MAX_CONNECTIONS_PER_USER=3
RECONNECT_WINDOW_SECONDS=45
